{% extends 'base.html.twig' %}

{% block title %}Ajouter une voiture{% endblock %}

{% block body %}


<section id="add">
    <a href="{{ path('app_home') }}">← Retour</a>
    <h1>Ajouter une voiture</h1>
    {{ form_start(form) }}
        {{ form_start(form) }}
        <div class="input">
            {{ form_row(form.nom, {label:'Nom'}) }}
        </div>
        <div class="input">
            {{ form_row(form.description, {label:'Description'}) }}
        </div>
        <div class="flex-input">
            <div class="input">
                {{ form_row(form.prixMensuel, {label:'Prix mensuel'}) }}
            </div>
            <div class="input">
                {{ form_row(form.prixJournalier, {label:'Prix journalier'}) }}
            </div>
        </div>
    <div class="flex-input">
        <div class="input">
            {{ form_row(form.nbPlaces, {label:'Nombres de places'}) }}
        </div>
        <div class="input">
            {{ form_row(form.isManuelle, {label:'Boîte manuelle'}) }}
        </div>
    </div>
    <button type="submit" class="btn-add">Envoyer</button>
    {{ form_end(form) }}

</section>
{% endblock %}
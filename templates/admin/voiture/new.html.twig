{% extends 'base.html.twig' %}

{% block title %}Ajouter une voiture{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Ajouter une voiture</h1>

        <div class="example-wrapper">

            {{ form_start(form) }}
                {{ form_row(form.nom, {label:'Nom'}) }}
                {{ form_row(form.description, {label:'Description'}) }}
                {{ form_row(form.prixJournalier, {label:'Prix journalier'}) }}
                {{ form_row(form.prixMensuel, {label:'Prix mensuel'}) }}
                {{ form_row(form.nbPlaces, {label:'Nombres de places'}) }}
                {{ form_row(form.isManuelle, {label:'Bo√Æte manuelle'}) }}

                <button type="submit" class="btn btn-primary">Envoyer</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
